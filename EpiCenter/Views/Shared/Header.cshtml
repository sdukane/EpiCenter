<div class="wrapper head">
    <header id="header" class="clear">
        <div id="logo">
            <a href="@Model.Layout.LogotypeLinkUrl" title="@Model.Layout.Logotype.Title">
                @Html.PropertyFor(x => x.Layout.Logotype)
